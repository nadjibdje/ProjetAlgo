<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="style.css"?>
<interface>
  <object id="window" class="GtkWindow">
    <property name="title" >VisuaList</property>
    <property name="resizable">FALSE</property>
    <property name="default_width">1500</property>
    <property name="default_height">1000</property>
    
      <child>
        <object id="grid" class="GtkGrid">
        <property name="column_homogeneous">True</property>
          <child>
            <object id="animations" class="GtkDrawingArea">
            <property name="visible">True</property>
            <property name="width_request">1500</property>
            <property name="height_request">700</property>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
              <property name="column-span">12</property>
              <property name="row-span">1</property>
            </layout>
            </object>
          </child>
          
         <child>
          <object id="buttonCreate" class="GtkButton">
            <property name="label">Create</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
          </object>
         </child> 

        <child>
            <object id="EntryCreate" class="GtkEntry">
            <property name="placeholder_text" >Valeurs</property>
            <layout>
              <property name="column">1</property>
              <property name="row">2</property>
            </layout>
            </object>
          </child>
          <child>
          <object id="buttonGoCreate" class="GtkButton">
            <property name="label">Go</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">2</property>
              <property name="row">2</property>
            </layout>
          </object>
         </child>


         <child>
          <object id="buttonInsert" class="GtkButton">
            <property name="label">Insert</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">3</property>
            </layout>
          </object>
         </child>

         <child>
            <object id="EntryPosInsert" class="GtkEntry">
            <property name="placeholder_text" >Position</property>
            <layout>
              <property name="column">2</property>
              <property name="row">3</property>
            </layout>
            
            </object>
          </child>

          <child>
            <object id="EntryValInsert" class="GtkEntry">
            <property name="placeholder_text" >Valeur</property>
            <layout>
              <property name="column">1</property>
              <property name="row">3</property>
            </layout>
            </object>
          </child>
          <child>
          <object id="buttonGoInsert" class="GtkButton">
            <property name="label">Go</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">3</property>
              <property name="row">3</property>
            </layout>
          </object>
         </child>

         <child>
          <object id="buttonRemove" class="GtkButton">
            <property name="label">Remove</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">4</property>
            </layout>
          </object>
         </child>
          
          <child>
            <object id="EntryPosSupp" class="GtkEntry">
            <property name="placeholder_text" >Position</property>
            <layout>
              <property name="column">1</property>
              <property name="row">4</property>
            </layout>
            </object>
          </child>
          <child>
          <object id="buttonGoSupp" class="GtkButton">
            <property name="label">Go</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">2</property>
              <property name="row">4</property>
            </layout>
          </object>
         </child>


         <child>
          <object id="buttonSearch" class="GtkButton">
            <property name="label">Search</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">5</property>
            </layout>
          </object>
         </child>

          <child>
              <object id="EntryValSearch" class="GtkEntry">
              <property name="placeholder_text" >Valeur</property>
              <layout>
                <property name="column">1</property>
                <property name="row">5</property>
              </layout>
              </object>
            </child>

          <child>
            <object id="buttonGoSearch" class="GtkButton">
              <property name="label">Go</property>
              <style>
                <class name="buttonA"/>
              </style>
              <layout>
                <property name="column">2</property>
                <property name="row">5</property>
              </layout>
            </object>
          </child>        






         <child>
          <object id="buttonSort" class="GtkButton">
            <property name="label">Sort</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">6</property>
            </layout>
          </object>
         </child>









         <child>
          <object id="buttonQuit" class="GtkButton">
            <property name="label">Quit</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">7</property>
            </layout>
            
          </object>
         </child>


        </object>
      </child>
  </object>
</interface>
