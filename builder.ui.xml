<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="style.css"?>
<interface>
  <object id="window" class="GtkWindow">
    <property name="title" >VisuaList</property>
    <property name="resizable">FALSE</property>
    <property name="default_width">1500</property>
    <property name="default_height">1000</property>
    
      <child>
        <object id="grid" class="GtkGrid">
          <child>
            <object id="drawing_area" class="GtkDrawingArea">
            <property name="visible">True</property>
            <property name="width_request">50</property>
            <property name="height_request">500</property>
            <style>
              <class name="Drawing"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">0</property>
              <property name="column-span">100</property>
              <property name="row-span">1</property>
            </layout>
            </object>
          </child>

          <child>
            <object id="Entry" class="GtkEntry">
            <layout>
              <property name="column">1</property>
              <property name="row">3</property>
            </layout>
            </object>
          </child>

         <child>
          <object id="buttonCreate" class="GtkButton">
            <property name="label"> Create</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">2</property>
            </layout>
          </object>
         </child> 

         <child>
          <object id="buttonInsert" class="GtkButton">
            <property name="label">Insert</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">3</property>
            </layout>
          </object>
         </child>

         <child>
          <object id="buttonRemove" class="GtkButton">
            <property name="label">Remove</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">4</property>
            </layout>
          </object>
         </child>


         <child>
          <object id="buttonSearch" class="GtkButton">
            <property name="label">Search</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">5</property>
            </layout>
          </object>
         </child>

         <child>
          <object id="buttonSort" class="GtkButton">
            <property name="label">Sort</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">6</property>
            </layout>
          </object>
         </child>

         <child>
          <object id="buttonQuit" class="GtkButton">
            <property name="label">Quit</property>
            <property name="name">buttonA</property>
            <style>
              <class name="buttonA"/>
            </style>
            <layout>
              <property name="column">0</property>
              <property name="row">7</property>
            </layout>
            
          </object>
         </child>


        </object>
      </child>
  </object>
</interface>
